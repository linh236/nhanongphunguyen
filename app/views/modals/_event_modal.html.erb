
<div id="eventModal" class="modal fade" role="dialog">
  <form method="post" action="/events" enctype="multipart/form-data">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h5 class="modal-title" id="commonModalLabel">Create a new event</h5>
        </div>
        <div class="modal-body">
          <div class="form-event">
            <div class="mt-2 mb-2">
              <label class="mb-1">Title</label>
              <input type="text" name="event[title]"  class="event-title col-8 custom-form-control form-control required">
            </div>
            <div class="mt-2 mb-2">
              <label class="mb-1">Description</label>
              <textarea type="text" rows="5" name="event[description]"  class="event-content col-8 custom-form-control form-control required"></textarea>
            </div>
             <div class="mt-2 mb-2">
              <label class="mb-1">Start</label>
              <input type="datetime-local" name="event[start]"  class="event-title col-8 custom-form-control form-control required">

            </div>
             <div class="mt-2 mb-2">
              <label class="mb-1">Finish</label>
              <input type="datetime-local" name="event[finish]"  class="event-title col-8 custom-form-control form-control required">
            </div>
            <div class="mt-2 mb-2">
              <label class="mb-1">Picture</label>
              <input type="file" multiple="false" name="event[picture]"  class="event-images col-8 custom-form-control form-control required">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary text-capitalize">event</button>
        </div>
      </div>
    </div>
  </form>
</div>
