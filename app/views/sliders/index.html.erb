<p id="notice"><%= notice %></p>

<h1>Sliders</h1>

<table>
  <thead>
    <tr>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= slider.images %></td>
        <td><%= link_to 'Show', slider %></td>
        <td><%= link_to 'Edit', edit_slider_path(slider) %></td>
        <td><%= link_to 'Destroy', slider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
       <% slider.images.each_with_index do |image, index|%>
            <% if isShowImage(image) %>
                <%= image_tag resize_image(image, '50x50') %>
              <% else %>
                <%= video_tag url_for(image), control: true, size: '250x250' %>
              <% end %>
          <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slider', new_slider_path %>
